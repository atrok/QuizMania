<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userpic"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/userpic"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winimg"
        android:src="@android:drawable/presence_online"
        android:layout_toRightOf="@id/username"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/wintxt"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/winimg"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lossimg"
        android:src="@android:drawable/presence_offline"
        android:layout_toRightOf="@id/wintxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/losstxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lossimg"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <RelativeLayout android:id="@+id/quizEmbed"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userpic"
        />

</RelativeLayout>