<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameListActivity" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userpic"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/userpic"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winimg"
        android:src="@android:drawable/presence_online"
        android:layout_toRightOf="@id/username"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/wintxt"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/winimg"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lossimg"
        android:src="@android:drawable/presence_offline"
        android:layout_toRightOf="@id/wintxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/losstxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lossimg"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/captiontxt"
        android:text="Click on category to start the game"
        android:layout_below="@+id/userpic"
        android:layout_marginTop="20dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorylist"
        android:layout_below="@id/captiontxt"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
